 
<html data-ng-app="AngularJs_Module">
@{
    ViewBag.Title = "Bahammas Hotel Room Booking System!";
}
<body data-ng-controller="AngularJs_Controller">
    <img src="~/Images/blank.gif" alt="" width="1" height="10" />

    <table width="99%" style=" border-bottom:3px solid #3273d5;">
        <tr>

            <td width="190">
                <table width="99%">
                    <tr>
                        <td>
                            Bem-vindo ao Bahammas Hotel Booking!
                        </td>


                    </tr>
                </table>
            </td>
            <td class="style1" align="center">
                <h3>Bahammas Hotel Room Booking System usando MVC & AngularJS  :)</h3>
            </td>
            <td align="right">
                <div>
                    Hoje é:
                    {{date | date:'yyyy-MM-dd'}}
                </div>

            </td>
        </tr>
    </table>

    <img src="~/Images/blank.gif" alt="" width="1" height="2" />
    <table id="tblContainer" style='width: 99%;table-layout:fixed;'>
        <tr>
            <td colspan="2">
                <table style="width: 99%; background-color:#FFFFFF; borderdashed 3px #6D7B8D; padding 5px;width 99%;table-layout:fixed;" cellpadding="2" cellspacing="2">
                    <tr style="height: 30px; background-color:#32607e; color:#FFFFFF ;border: solid 1px #659EC7;">
                        <td>
                            <h3> Gerenciar detalhes de reserva de quarto Adicionar / editar e excluir detalhes de reserva de quarto</h3>
                        </td>
                    </tr>
                    <tr>
                        <td valign="top">
                            <form novalidate name="f1" ng-submit="saveroomBooking()">
                                <table style="color:#9F000F;font-size:large" cellpadding="4" cellspacing="6">

                                    <tr>
                                        <td>
                                            <b>ID da reserva do quarto: </b>
                                        </td>

                                        <td>
                                            <input type="text" name="txtBookingID" ng-model="BookingID" value="0" style="background-color:tan" readonly />
                                            <br />

                                        </td>
                                        <td>
                                            <b>Quarto N° : </b>
                                        </td>

                                        <td>

                                            <select name="opSelect" id="opSelect" ng-model="RoomIDs">
                                                <option value="" selected>-- Select --</option>
                                                <option ng-repeat="option in HotelRoomData" value="{{option.RoomNo}}">{{option.RoomNo}}</option>
                                            </select>
                                            <br />
                                            <span class="error" ng-show="(f1.file.$dirty || IsFormSubmitted) && f1.opSelect.$error.required">Selecione um quarto!</span>
                                        </td>
                                    </tr>

                                    <tr>
                                        <td>
                                            <b> Reserva de: </b>
                                        </td>
                                        <td>
                                            <input type="date" name="txtBookedDateFR" ng-model="BookedDateFR" placeholder="YYYY-MM-DD" required />
                                            <br />
                                            <span class="error" ng-show="(f1.file.$dirty || IsFormSubmitted) && f1.txtBookedDateFR.$error.required">É necessário uma data para a reserva :)</span>
                                        </td>

                                        <td>
                                            <b> Reserva para: </b>
                                        </td>
                                        <td>
                                            <input type="date" name="txtBookedDateTO" ng-model="BookedDateTO" placeholder="YYYY-MM-DD" required />
                                            <br />
                                            <span class="error" ng-show="(f1.file.$dirty || IsFormSubmitted) && f1.txtBookedDateTO.$error.required">É necessário uma data para a reserva :)</span> 
                                        </td>
                                    </tr>

                                    <tr>
                                        <td>
                                            <b>Status da reserva: </b>
                                        </td>

                                        <td>
                                            <select name="opSelect1" id="opSelect1" ng-model="BookingStatus">
                                                <option value="" selected>-- Selecione --</option>
                                                <option value="Free" >Free</option>
                                                <option value="Occupied" >Ocupado</option>
                                                <option value="Reserved">Reservado</option>
                                            </select>
                                            <br />
                                            <span class="error" ng-show="(f1.file.$dirty || IsFormSubmitted) && f1.opSelect1.$error.required">Selecione o status da reserva!</span>

                                        </td>
                                        <td>
                                            <b>Tipo de pagamento : </b>
                                        </td>

                                        <td>
                                            <select name="opSelect2" id="opSelect2" ng-model="PaymentStatus">
                                                <option value="" selected>-- Select --</option>
                                                <option value="Paid">Pago</option>
                                                <option value="Not Paid">Não pago</option>
                                                <option value="Advance">Adiantamento</option>
                                            </select>
                                            <br />
                                            <span class="error" ng-show="(f1.file.$dirty || IsFormSubmitted) && f1.opSelect2.$error.required">Selecione um status para a reserva!</span>

                                        </td>


                                    </tr>

                                    <tr>
                                        <td>
                                            <b>Adiantamento Pago: </b>
                                        </td>

                                        <td>

                                            <input type="text" name="txtAdvancePayed" ng-model="AdvancePayed" value="0R$" placeholder="0R$" required />
                                            <br />
                                            <span class="error" ng-show="(f1.file.$dirty || IsFormSubmitted) && f1.txtAdvancePayed.$error.required">É necessário pagamento antecipado!</span>

                                        </td>

                                        <td>
                                            <b>Valor total pago: </b>
                                        </td>

                                        <td>

                                            <input type="text" name="txtTotalAmountPayed" ng-model="TotalAmountPayed" value="0R$" placeholder="0R$" required />
                                            <br />
                                            <span class="error" ng-show="(f1.file.$dirty || IsFormSubmitted) && f1.txtTotalAmountPayed.$error.required">Valor total pago necessário!</span>

                                        </td>
                                    </tr>

                                    <tr>
                                        <td colspan="4">
 
                                            <input type="submit" value="Salvar detalhes de reserva de quarto" style="background-color:#3d6380;color:#FFFFFF" required />
                                   
                                             
                                        </td>
                                    </tr>

                                </table>

                            </form>

                        </td>
                    </tr>
                </table>
            </td>
        </tr>
        <tr>
            <td colspan="2">

                <table style="width: 99%; background-color:#FFFFFF; border: solid 2px #6D7B8D; padding 5px;width 99%;table-layout:fixed;" cellpadding="2" cellspacing="2">

                    <tr style="height: 30px; background-color:#659EC7 ; color:#FFFFFF ;border: solid 1px #659EC7;">
                        <td width="40" align="center"><b>Editar</b></td>
                        <td width="40" align="center"><b>Deletar</b></td>
                        <td width="60" align="center"><b>Quarto N° </b></td>
                        <td width="80" align="center"><b>Reservado de</b></td>
                        <td width="80" align="center"><b>Reservado para</b></td>
                        <td width="90" align="center"><b>Status da reserva</b></td>
                        <td width="80" align="center"><b>Pago</b></td>
                        <td width="80" align="center"><b>Adiantado</b></td>
                        <td width="80" align="center"><b>Total</b></td>
                    </tr>
                    <tbody data-ng-repeat="details in RoomBookingData">
                        <tr>

                            <td align="center" style="border: solid 1px #659EC7; padding: 5px;table-layout:fixed;">
                                <span style="color:#9F000F">
                                    <img src="~/Images/edit.gif" alt="Edit" width="24px" height="24px" ng-click="roomBookingEdit(details.BookingID, details.RoomID ,  details.BookedDateFR,  details.BookedDateTO, details.BookingStatus , details.PaymentStatus, details.AdvancePayed, details.TotalAmountPayed)">

                                </span>
                            </td>

                            <td align="center" style="border: solid 1px #659EC7; padding: 5px;table-layout:fixed;">
                                <span style="color:#9F000F">
                                    <img src="~/Images/delete.gif" alt="Delete" width="24px" height="24px" ng-click="roomBookingDelete(details.BookingID)">
                                </span>
                            </td>

                            <td align="center" style="border: solid 1px #659EC7; padding: 5px;table-layout:fixed;">
                                <span style="color:#9F000F">{{details.RoomID}}</span>
                            </td>

                            <td valign="top" style="border: solid 1px #659EC7; padding: 5px;table-layout:fixed;">
                                <span style="color:#9F000F">{{details.BookedDateFR}}</span>
                            </td>

                            <td valign="top" style="border: solid 1px #659EC7; padding: 5px;table-layout:fixed;">
                                <span style="color:#9F000F">{{details.BookedDateTO}}</span>
                            </td>
                            <td valign="top" style="border: solid 1px #659EC7; padding: 5px;table-layout:fixed;">
                                <span style="color:#9F000F">{{details.BookingStatus}}</span>
                            </td>
                            <td valign="top" style="border: solid 1px #659EC7; padding: 5px;table-layout:fixed;">
                                <span style="color:#9F000F">{{details.PaymentStatus}}</span>
                            </td>
                            <td valign="top" align="right" style="border: solid 1px #659EC7; padding: 5px;table-layout:fixed;">
                                <span style="color:#9F000F">{{details.AdvancePayed}}</span>
                            </td>
                            <td valign="top" align="right" style="border: solid 1px #659EC7; padding: 5px;table-layout:fixed;">
                                <span style="color:#9F000F">{{details.TotalAmountPayed}}</span>
                            </td>
                           
                        </tr>
                    </tbody>
                </table>

            </td>
        </tr>

    </table>
    <img src="~/Images/blank.gif" alt="" width="1" height="2" />
    <table style='width: 99%;table-layout:fixed;'>
        <tr>
            <td colspan="2">
                <table style="width: 99%; background-color:#FFFFFF; border dashed 3px #6D7B8D; padding 5px;width 99%;table-layout:fixed;" cellpadding="2" cellspacing="2">
                    <tr style="height: 30px; background-color:#45623d ; color:#FFFFFF ;border: solid 1px #659EC7;">
                        <td>
                            <h3>Gerenciar detalhes da sala</h3>
                        </td>

                    </tr>
                </table>
            </td>
        </tr>
        <tr>
            <td valign="top">
                <form novalidate name="f2" ng-submit="saveRoom()">
                    <table style="color:#9F000F;font-size:large" cellpadding="4" cellspacing="6">

                        <tr>
                            <td>
                                <b>Room  ID: </b>
                            </td>
                            <td>
                                <input type="text" name="txtRoomID" ng-model="RoomID" value="0" style="background-color:tan" readonly />
                                <br />
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <b> Quarto N° : </b>
                            </td>
                            <td>
                                <input type="text" name="txtRoomNo" ng-model="RoomNo" placeholder="RoomNo ..." required />
                                <br />
                                <span class="error" ng-show="(f2.file.$dirty || IsFormSubmitted2) && f2.txtRoomNo.$error.required">Informe o N° do Quarto!</span>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <b>Tipo do Quarto : </b>
                            </td>
                            <td>
                                <select name="opSelect4" id="opSelect4" ng-model="RoomType">
                                    <option value="" selected>-- Selecionar --</option>
                                    <option value="Single">Individual</option>
                                    <option value="Double">Duplo</option>
                                    <option value="Twin">Casal</option>
                                    <option value="Duplex">Duplex</option>
                                    <option value="Suite">Suite</option>
                                </select>
                                <br />
                                <span class="error" ng-show="(f2.file.$dirty || IsFormSubmitted2) && f2.opSelect4.$error.required">Selecione o tipo do Quarto!</span>
                                <br />
                            </td>
                        <tr>
                            <td>
                                <b> Preço do Quarto : </b>
                            </td>
                            <td>
                                <input type="text" name="txtPrize" ng-model="Prize" value="0R$" placeholder="Preço R$ ..." required />
                                <br />
                                <span class="error" ng-show="(f2.file.$dirty || IsFormSubmitted2) && f2.txtPrize.$error.required">Informe o número do quarto!</span>
                            </td>
                        </tr>
                        <tr>
                            <td colspan="2">
                                <input type="submit" value="Save Album" style="background-color:#407531;color:#FFFFFF" required />
                            </td>
                        </tr>
                    </table>
                </form>
            </td>
            <td valign="top">
                <table style="width: 98%; background-color:#FFFFFF;bordersolid 2px #6D7B8D; padding: 5px;table-layout: fixed;" cellpadding="2" cellspacing="2">
                    <tr style="height: 30px; background-color:#82ae76 ; color:#FFFFFF ;border: solid 1px #659EC7;">
                        <td width="70" align="center"><b>Quarto N° </b></td>
                        <td width="200" align="center"><b>Tipo do Quarto</b></td>
                        <td width="70" align="center"><b>Preço</b></td>
                    </tr>
                    <tbody data-ng-repeat="details in HotelRoomData">
                        <tr>

                            <td align="center" style="border: solid 1px #659EC7; padding: 5px;table-layout:fixed;">
                                <span style="color:#9F000F">{{details.RoomNo}}</span>
                            </td>
                            <td align="center" style="border: solid 1px #659EC7; padding: 5px;table-layout:fixed;">
                                <span style="color:#9F000F">{{details.RoomType}}</span>
                            </td>
                            <td align="right" style="border: solid 1px #659EC7; padding: 5px;table-layout:fixed;">
                                <span style="color:#9F000F">{{details.Prize}}</span>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </td>
        </tr>
    </table>
</body>
</html>

<script src="~/Scripts/angular.js"></script>
<script src="~/Scripts/angular.min.js"></script>
<script src="~/Scripts/angular-animate.js"></script>
<script src="~/Scripts/angular-animate.min.js"></script>
<script src="~/Scripts/MYAngular/controller.js"></script>
